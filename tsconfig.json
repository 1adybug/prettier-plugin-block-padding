{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": false,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "lib": ["ESNext"]
    },
    "include": ["src/**/*.ts"]
}
