{
    "name": "prettier-plugin-block-padding",
    "version": "0.0.6",
    "description": "A Prettier plugin that intelligently adds blank lines around code blocks for better visual grouping",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        }
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rslib build",
        "dev": "rslib build --watch",
        "prepare": "npm run build",
        "test:quick": "node ./scripts/quick-test.mjs",
        "format": "prettier --config prettier.config.mjs --write .",
        "fg": "npm run format && git add . && git commit -m \"chore: format code\""
    },
    "keywords": [
        "prettier",
        "prettier-plugin",
        "formatter",
        "code-formatting",
        "blank-lines",
        "spacing",
        "block-padding",
        "typescript",
        "javascript"
    ],
    "author": "1adybug <lurongv@qq.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/1adybug/prettier-plugin-block-padding.git"
    },
    "homepage": "https://github.com/1adybug/prettier-plugin-block-padding#readme",
    "bugs": {
        "url": "https://github.com/1adybug/prettier-plugin-block-padding/issues"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "sideEffects": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.com/"
    },
    "dependencies": {},
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
        "@rslib/core": "^0.15.0",
        "@types/node": "^24.7.2",
        "glob": "^11.0.3",
        "prettier": "^3.3.3",
        "prettier-plugin-organize-imports": "^4.3.0",
        "typescript": "^5.8.3"
    },
    "peerDependencies": {
        "prettier": "^3.0.0"
    }
}
